<settings xmlns="http://maven.apache.org/SETTINGS/1.2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0 https://maven.apache.org/xsd/settings-1.2.0.xsd">
  <pluginGroups>
    <pluginGroup>eu.maveniverse.maven.plugins</pluginGroup>
  </pluginGroups>

  <servers>
    <server>
      <id>black-hole-service</id>
      <username>token1</username>
      <password>token2</password>
      <configuration>
        <!-- Using Black Hole publisher -->
        <njord.publisher>black-hole</njord.publisher>
        <!-- Releases are staged locally (if omitted, would go directly to URL as per POM) -->
        <njord.releaseUrl>njord:template:release-sca</njord.releaseUrl>
        <!-- Snapshots are staged locally (if omitted, would go directly to URL as per POM) -->
        <njord.snapshotUrl>njord:template:snapshot-sca</njord.snapshotUrl>
      </configuration>
    </server>

    <server>
      <id>sonatype-cp-service</id>
      <username>token1</username>
      <password>token2</password>
      <configuration>
        <!-- Using Sonatype Central Portal publisher -->
        <njord.publisher>sonatype-cp</njord.publisher>
        <!-- Releases are staged locally (if omitted, would go directly to URL as per POM) -->
        <njord.releaseUrl>njord:template:release-sca</njord.releaseUrl>
        <!-- Snapshots are staged locally (if omitted, would go directly to URL as per POM) -->
        <njord.snapshotUrl>njord:template:snapshot-sca</njord.snapshotUrl>
      </configuration>
    </server>

    <server>
      <id>deploy-release-service</id>
      <configuration>
        <!-- Using Deploy publisher -->
        <njord.publisher>deploy</njord.publisher>
        <!-- Releases are staged locally (if omitted, would go directly to URL as per POM) -->
        <njord.releaseUrl>njord:template:release-sca</njord.releaseUrl>
        <!-- Snapshots are staged locally (if omitted, would go directly to URL as per POM) -->
        <njord.snapshotUrl>njord:template:snapshot-sca</njord.snapshotUrl>
      </configuration>
    </server>

    <!-- Dedicated server for IT basic-pom-all-props; auth only -->
    <server>
      <id>pom-all-props-server</id>
      <username>token1</username>
      <password>token2</password>
    </server>
  </servers>
  <profiles>
    <profile>
      <id>maven-4-rc-5-circumvention</id>
      <properties>
        <aether.remoteRepositoryFilter.prefixes>false</aether.remoteRepositoryFilter.prefixes>
      </properties>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>maven-4-rc-5-circumvention</activeProfile>
  </activeProfiles>
</settings>